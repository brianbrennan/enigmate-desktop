{
  "name": "enigmate-desktop",
  "version": "0.5.0",
  "description": "Open Source Encryption Application",
  "main": "index.js",
  "scripts": {
    "postinstall": "bower install",
    "start": "electron .",
    "build": "electron-packager . enigmate --ignore=node_modules/electron-* --ignore=node_modules/grunt* --ignore=node_modules/bower --ignore=app/components/lib/bourbon --ignore=app/components/lib/breakpoint-sass --ignore=app/components/lib/susy --ignore=app/components/lib/sassy-maps --ignore=app/components/scss --ignore=app/files/* --platform=win32 --arch=all --out=staging --version=0.33.6 --overwrite"
  },
  "keywords": [
    "Encryption",
    "Enigma",
    "enigma.js"
  ],
  "author": "Brian Brennan",
  "license": "MIT",
  "devDependencies": {
    "bower": "^1.4.1",
    "grunt": "^0.4.5",
    "grunt-beep": "^0.3.1",
    "grunt-contrib-connect": "^0.10.1",
    "grunt-contrib-uglify": "^0.2.7",
    "grunt-contrib-watch": "^0.5.3",
    "grunt-sass": "^0.18.1"
  },
  "dependencies": {
    "electron-packager": "^5.1.0",
    "electron-prebuilt": "^0.33.6",
    "enigma.js": "^0.8.4"
  }
}
